# PostgreSQL Buffer Manager Configuration
# Copy this file to .env and adjust values

# PostgreSQL connection settings
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=testdb

# Buffer pool configuration
# shared_buffers - Total buffer pool size (recommend 25% of RAM)
SHARED_BUFFERS=128MB

# Buffer replacement strategy (requires recompilation)
# Options: clock_sweep (default), fifo
BUFFER_STRATEGY=clock_sweep

# Logging
LOG_LEVEL=INFO
